@model Attendance.Models.LEAVE

@{
    ViewBag.Title = "Declined";
    Layout = "~/Views/Shared/_master.cshtml";
}
<div class="content">
    <div class="login-form">
        <div class="main-div">
            <h2>Declined</h2>

            @using (Html.BeginForm("Declined", "leave"))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>LEAVE</h4>
                    <hr />
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.LID, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.LID, new { @readonly = "readonly" ,  @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LID)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EID, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.EID, new { @readonly = "readonly" , @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EID)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LEAVE_TYPE, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.LEAVE_TYPE, new { @readonly = "readonly" ,  @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LEAVE_TYPE)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.FROM_DATE, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.FROM_DATE, new { @readonly = "readonly", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.FROM_DATE)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TO_DATE, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.TO_DATE, new { @readonly = "readonly", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TO_DATE)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DAYS, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.DAYS, new { @readonly = "readonly", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DAYS)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.REASON, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.REASON, new { @readonly = "readonly", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.REASON)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.STATUS, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.STATUS, new { @readonly = "readonly", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.STATUS)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                <input type="button" value="cancel" class="btn btn-default" onclick="location.href='@Url.Action("leave_Requested", "leave")'" />
            </div>
        </div>
    </div>
</div>