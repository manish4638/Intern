@model Attendance.Models.LEAVES_TYPES

@{
    ViewBag.Title = "editleavetype";
    Layout = "~/Views/Shared/_master.cshtml";
}
<div class="content">
    <div class="login-form">
        <div class="main-div">
            <h2>editleavetype</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>LEAVES_TYPES</h4>
                    <hr />
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.LTID, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.LTID, new { @readonly = "readonly" , @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LTID)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LEAVE_NAME, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.LEAVE_NAME, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LEAVE_NAME)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DAYS_OFF, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.DAYS_OFF, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DAYS_OFF)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>