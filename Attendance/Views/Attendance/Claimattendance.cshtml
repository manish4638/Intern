                        </div>
                        <div>@ViewBag.Message</div>
                    </div>
                </div>
            }
        </div>
    </div>
    @*-----------------------------------------listing the data from Database------------------------------------------------*@
    <div id="claimlist">
        <table class="table">
            @{
                <tr>
                    <th> Eid</th>
                    <th>
                        @Html.DisplayNameFor(model => model.LOGIN_DATE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LOGIN_TIME)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LOGOUT_DATE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LOGOUT_TIME)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.REASON)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.STATUS)
                    </th>

                </tr>
                if (ViewBag.claimlists != null)
                {
                    foreach (var lst in ViewBag.claimlists)
                    {
                        <tr>
                            <td>

                                @lst.EID
                            </td>
                            <td>

                                @lst.LOGIN_DATE
                            </td>
                            <td>
                                @lst.LOGIN_TIME
                            </td>
                            <td>
                                @lst.LOGOUT_DATE
                            </td>
                            <td>
                                @lst.LOGOUT_TIME
                            </td>
                            <td>
                                @lst.REASON
                            </td>
                            <td>
                                @lst.STATUS
                            </td>

                        </tr>
                    }

                }


            }
        </table>

    </div>

</div>